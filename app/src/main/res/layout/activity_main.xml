<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- RED -->
    <Button
        android:id="@+id/btn_red"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        android:background="@drawable/button_red"
        android:fontFamily="@font/ubuntu_light"
        android:text="@string/btn_red"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- GREEN -->
    <Button
        android:id="@+id/btn_green"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        android:background="@drawable/button_green"
        android:fontFamily="@font/ubuntu_light"
        android:text="@string/btn_green"
        android:textColor="@color/text_day"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- BLUE -->
    <Button
        android:id="@+id/btn_blue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        android:background="@drawable/button_blue"
        android:fontFamily="@font/ubuntu_light"
        android:text="@string/btn_blue"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.95"/>

    <!-- ORANGE -->
    <Button
        android:id="@+id/btn_orange"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_orange"
        android:fontFamily="@font/ubuntu_light"
        android:text="@string/btn_orange"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_red" />

    <!-- TURQUOISE -->
    <Button
        android:id="@+id/btn_turquoise"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_turquoise"
        android:fontFamily="@font/ubuntu_light"
        android:text="@string/btn_turquoise"
        android:textColor="@color/text_day"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_green" />

    <!-- PURPLE -->
    <Button
        android:id="@+id/btn_purple"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_purple"
        android:fontFamily="@font/ubuntu_light"
        android:text="@string/btn_purple"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_blue" />

    <!-- YELLOW -->
    <Button
        android:id="@+id/btn_yellow"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_yellow"
        android:fontFamily="@font/ubuntu_light"
        android:text="@string/btn_yellow"
        android:textColor="@color/text_day"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_orange" />

    <!-- BLACK -->
    <Button
        android:id="@+id/btn_black"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_black"
        android:fontFamily="@font/ubuntu_light"
        android:text="@string/btn_black"
        android:textColor="@color/text_night"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_turquoise" />

    <!-- WHITE -->
    <Button
        android:id="@+id/btn_white"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_white"
        android:fontFamily="@font/ubuntu_light"
        android:text="@string/btn_white"
        android:textColor="@color/text_day"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_purple" />
</androidx.constraintlayout.widget.ConstraintLayout>